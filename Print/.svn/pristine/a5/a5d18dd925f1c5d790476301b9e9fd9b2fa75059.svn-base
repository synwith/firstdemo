<?xml version="1.0" encoding="utf-8"?> 

<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_checked="false">
       <shape>
        <solid android:color="#0099FF"/>
       </shape>
   </item>
   
  <item android:state_checked="true">
    <shape>
        <solid android:color="#0099FF"/>
        <stroke 
                android:width="3dp" 
                android:color="#FF8913"/> 
    </shape>
  </item>
</selector>