<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_title_bar"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#00000000"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_load_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:background="@drawable/menu_selector" />

    <Button
        android:id="@+id/btn_save_share"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/shengcheng_selector" />

    <Button
        android:id="@+id/btn_duotu_select"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_action_bar_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_save_share"
        android:background="@drawable/selector_title_btn"
        android:scaleType="centerInside"
        android:text="@string/save_select"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />
</RelativeLayout>